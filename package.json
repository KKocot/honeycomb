{
  "name": "honeycomb",
  "version": "0.0.1",
  "private": true,
  "description": "Honeycomb - Hive Blockchain UI Components",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:docs": "pnpm --filter docs dev",
    "build:docs": "pnpm --filter docs build",
    "dev:demo-react-next": "pnpm --filter demo-react-next dev",
    "build:demo-react-next": "pnpm --filter demo-react-next build",
    "dev:demo-solid": "pnpm --filter demo-solid dev",
    "build:demo-solid": "pnpm --filter demo-solid build",
    "dev:demo-vue": "pnpm --filter demo-vue dev",
    "build:demo-vue": "pnpm --filter demo-vue build",
    "dev:demo-react-vite": "pnpm --filter demo-react-vite dev",
    "build:demo-react-vite": "pnpm --filter demo-react-vite build",
    "dev:demo-react-astro": "pnpm --filter demo-react-astro dev",
    "build:demo-react-astro": "pnpm --filter demo-react-astro build",
    "dev:demo-react-remix": "pnpm --filter demo-react-remix dev",
    "build:demo-react-remix": "pnpm --filter demo-react-remix build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.58.2",
    "turbo": "^2.7.6"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
