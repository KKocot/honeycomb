{
  "name": "honeycomb",
  "version": "0.0.1",
  "private": true,
  "description": "Honeycomb - Hive Blockchain UI Components",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:docs": "pnpm --filter docs dev",
    "build:docs": "pnpm --filter docs build",
    "dev:demo-react": "pnpm --filter demo-react dev",
    "build:demo-react": "pnpm --filter demo-react build",
    "dev:demo-solid": "pnpm --filter demo-solid dev",
    "build:demo-solid": "pnpm --filter demo-solid build",
    "dev:demo-vue": "pnpm --filter demo-vue dev",
    "build:demo-vue": "pnpm --filter demo-vue build"
  },
  "devDependencies": {
    "turbo": "^2.7.6"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18"
  }
}
