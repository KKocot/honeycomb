{
  "name": "@barddev/honeycomb-react",
  "version": "0.6.1",
  "description": "React components for Hive Blockchain applications",
  "keywords": [
    "hive",
    "blockchain",
    "react",
    "components",
    "web3",
    "honeycomb"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KKocot/honeycomb",
    "directory": "packages/react"
  },
  "homepage": "https://github.com/KKocot/honeycomb#readme",
  "bugs": {
    "url": "https://github.com/KKocot/honeycomb/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "KKocot",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./base.css": "./dist/base.css",
    "./theme.css": "./dist/theme.css"
  },
  "files": [
    "dist",
    "!dist/*.map",
    "README.md"
  ],
  "sideEffects": [
    "./dist/styles.css",
    "./dist/base.css",
    "./dist/theme.css"
  ],
  "scripts": {
    "build": "tsup && bash scripts/build-css.sh",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@hiveio/wax": ">=1.28.0",
    "@radix-ui/react-popover": ">=1.1.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "clsx": "^2.1.1",
    "remarkable": "^2.0.1",
    "sanitize-html": "^2.13.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@hiveio/wax": "^1.28.4-rc0",
    "@kkocot/honeycomb-core": "workspace:*",
    "@kkocot/honeycomb-renderer": "workspace:*",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@tailwindcss/cli": "^4.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
