{
  "name": "@kkocot/honeycomb-renderer",
  "version": "0.1.0",
  "description": "Content renderer for Hive Blockchain posts and comments. Markdown + HTML sanitization, asset embedding, and security.",
  "keywords": [
    "hive",
    "blockchain",
    "markdown",
    "renderer",
    "honeycomb",
    "content-renderer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KKocot/honeycomb"
  },
  "private": true,
  "license": "MIT",
  "author": "KKocot",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./src/styles.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/styles.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "remarkable": "^2.0.1",
    "sanitize-html": "^2.13.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/remarkable": "^2.0.8",
    "@types/sanitize-html": "^2.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
