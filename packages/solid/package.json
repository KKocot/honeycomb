{
  "name": "@barddev/honeycomb-solid",
  "version": "0.1.0",
  "description": "Solid.js components for Hive Blockchain applications",
  "keywords": [
    "hive",
    "blockchain",
    "solidjs",
    "solid",
    "components",
    "web3",
    "honeycomb"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KKocot/honeycomb",
    "directory": "packages/solid"
  },
  "homepage": "https://github.com/KKocot/honeycomb#readme",
  "bugs": {
    "url": "https://github.com/KKocot/honeycomb/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "KKocot",
  "type": "module",
  "exports": {
    ".": {
      "solid": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./base.css": "./dist/base.css",
    "./theme.css": "./dist/theme.css"
  },
  "files": ["dist", "src", "!dist/*.map", "README.md"],
  "sideEffects": [
    "./dist/styles.css",
    "./dist/base.css",
    "./dist/theme.css"
  ],
  "scripts": {
    "build": "tsup && bash scripts/build-css.sh",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@hiveio/wax": ">=1.28.0",
    "@kobalte/core": ">=0.13.0",
    "solid-js": ">=1.8.0"
  },
  "peerDependenciesMeta": {
    "@kobalte/core": {
      "optional": true
    }
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "clsx": "^2.1.1",
    "remarkable": "^2.0.1",
    "sanitize-html": "^2.13.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@kkocot/honeycomb-core": "workspace:*",
    "@kkocot/honeycomb-renderer": "workspace:*",
    "@hiveio/wax": "^1.28.4-rc0",
    "@tailwindcss/cli": "^4.0.0",
    "solid-js": "^1.9.0",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
