{
  "name": "@kkocot/honeycomb-solid",
  "version": "0.1.0",
  "description": "Solid.js components for Hive Blockchain applications",
  "keywords": ["hive", "blockchain", "solidjs", "components", "web3", "honeycomb"],
  "repository": {
    "type": "git",
    "url": "https://github.com/KKocot/honeycomb"
  },
  "private": true,
  "license": "MIT",
  "author": "KKocot",
  "type": "module",
  "exports": {
    ".": {
      "solid": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup && cp ../core/src/styles.css dist/core-styles.css && cp ../renderer/src/styles.css dist/renderer-styles.css && cat dist/core-styles.css dist/renderer-styles.css > dist/styles.css && rm dist/core-styles.css dist/renderer-styles.css",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@hiveio/wax": ">=1.28.0",
    "solid-js": ">=1.8.0"
  },
  "dependencies": {
    "@kobalte/core": "^0.13.0",
    "@xmldom/xmldom": "^0.8.10",
    "clsx": "^2.1.1",
    "remarkable": "^2.0.1",
    "sanitize-html": "^2.13.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@kkocot/honeycomb-core": "workspace:*",
    "@kkocot/honeycomb-renderer": "workspace:*",
    "@hiveio/wax": "^1.28.4-rc0",
    "solid-js": "^1.9.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
